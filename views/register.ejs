

	  <!-- Page Content-->
	  <div class="container px-5 ">
             
		<div class="row justify-content-center">
			<div class="col-lg-6 col-xl-6 col-xxl-4">

				<div class="pb-5"></div>


				<%- include ('./partials/messages') %>

					<div class=" border-1  m-3">
						
						<div class="card-body p-4">
							<div class="row mb-4 mt-3" >
								<div class=" row justify-content-center">
									<div class="col-lg-12 col-xl-12 col-xxl-4 text-warning" style="margin-left: 320px;font-size: 25px;">
										<p><i class="fas fa-shopping-cart text-warning"></i> Strober</p>
										<!-- <img src="/assets/logo.png" alt="" style="max-width: 100px;"> -->
									</div>
								</div>
								<!-- <h5 class="text-light align-items-center">Store keeper</h5> -->
							</div>
							<form action="/auth/register" method="post">
								<div class="row">
									<div class="form-group col-6">
										<input type="text" class="form-control mt-2 bg-transparent text-dark" placeholder=" First name" name="first_name" value="<%= typeof first_name !== 'undefined' ? first_name : '' %>">
									</div>
									<div class="form-group col-6">
										<input type="text" class="form-control mt-2 bg-transparent text-dark" placeholder=" Last name" name="last_name"  value="<%= typeof last_name !== 'undefined' ? last_name : '' %>">
									</div>
									<div class="form-group col-12">
										<input type="email" class="form-control mt-2 bg-transparent text-dark" placeholder="Enter Email" name="email" value="<%= typeof phone !== 'undefined' ? phone : '' %>">
									</div>
									<div class="form-group col-12">
										<input type="number" class="form-control mt-2 bg-transparent text-dark" placeholder="Enter phone " name="phone" value="<%= typeof email !== 'undefined' ? email : '' %>">
									</div>
									<div class="form-group col-6">
										<input type="password" class="form-control mt-2 bg-transparent text-dark" placeholder="Enter password" name="password" value="<%= typeof password !== 'undefined' ? password : '' %>">
									</div>
									<div class="form-group col-6">
										<input type="password" class="form-control mt-2 bg-transparent text-dark" placeholder="Enter same password" name="confirm_password">
									</div>



								</div>
			
								<button class="btn btn-warning mt-2 " style="width: 100%;" type="submit">Register</button>
							</form>
							<p class="mt-2">Already have an acount? <a href="/">Login</a></p>
						</div>

					</div>


			</div>
		</div>
	</div>



