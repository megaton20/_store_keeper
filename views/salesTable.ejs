

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <%- include ('./partials/sidebar') %>
        <!-- End of Sidebar -->

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <%- include ('./partials/topbar') %>
                <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">

                    <!-- Page Heading -->
                    <h1 class="h3 mb-2 text-gray-800">Sales Details Tables </h1>
                    <p class="mb-4">This table shows all registered Customers in all branches </p>

                    <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <%- include ('./partials/messages') %>

                        <% if(allSales.length <= 0){ %>
                            <div class="card-body">
                                
                                <h1>No Sales Record Found !</h1>  
                            </div> 
                            <% } else{ %>  
                                <div class="card-body">
                                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                        <thead>
                                            <tr>
                                              <th>Id</th>
                                              <th>Store Name</th>
                                              <th>Store id</th>
                                              <th>Sale UUID</th>
                                              <th>Total Amount</th>
                                              <th>Payment type</th>
                                              <th>Attendant id</th>
                                              <th>Date</th>
    
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <th>Id</th>
                                                <th>Store Name</th>
                                                <th>Store id</th>
                                                <th>Sale UUID</th>
                                                <th>Total Amount</th>
                                                <th>Payment type</th>
                                                <th>Attendant id</th>
                                                <th>Date</th>
    
                                              </tr>
                                        </tfoot>
                                        <tbody>
                                      
                                            <% allSales.forEach(function(data) {%>     
                                             
                                                <tr>
                                                    <td><%= data['id'] %></td>
                                                    <td><%= data['store_name'] %> </td>
                                                    <td><%= data['store_id'] %></td>
                                                    <td><%= data['sale_id'] %></td>
                                                    <td><%= data['total_amount'] %></td>
                                                    <td><%= data['Payment_type'] %></td>
                                                    <td><%= data['attendant_id'] %></td>
                                                    <td><%= data['created_date'] %></td>
                                              
                                               </tr> 
                                               
                                                   <% }) %>
                                     
                                       
                                        
    
                                            </tbody>
                                    </table>
                                </div>
                        
                        <% } %>

                      
                    </div>

                </div>
                <!-- /.container-fluid -->

            </div>
            <!-- End of Main Content -->

            <!-- Footer -->
            <%- include ('./partials/footer') %>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->

    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <%- include ('./partials/logout') %>
