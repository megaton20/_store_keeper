<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Content Wrapper -->
  <div id="content-wrapper">
    <!-- Main Content -->
    <div id="content ">
      <!-- Topbar -->
      <%- include ('../partials/topbarUser') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <%- include ('../partials/messages') %>

        <div class="container mt-4 mb-4" style="border-left: 2px solid #ffdd00">
          <p class="text-warning">Order will arive in 40 minutes</p>
        </div>

        <div class="container">
          <div class="row mt-4">
            <div class="col-6 mb-4">
              <div class="mb-4">
                <!-- Card Header - Dropdown -->

                <!-- Card Body -->

                <p class="text-uppercase text-primary">Delivery Details</p>

                <div class="row mb-4">
               
                  <div class="col-6">Payment Type:</div>
                  <div class="col-6"><%= newOrder[0].payment_type %></div>
                  <div class="col-6">phone:</div>
                  <div class="col-6"><%= newOrder[0].customer_phone %></div>
                  <div class="col-6">Delivery Type:</div>
                  <div class="col-6"><%= newOrder[0].Delivery %></div>
                  <div class="col-6">Order Status:</div>
                  <div class="col-6"><%= newOrder[0].status %></div>
                  <div class="col-6">Address:</div>
                  <div class="col-6"><%= newOrder[0].customer_address %></div>
                  <div class="col-6">Be Dlivered By:</div>
                  <div class="col-6"><%= newOrder[0].driver %></div>
                </div>
              </div>
            </div>

            <div class="col-6">
              <div class="mb-4">
                <!-- Card Header - Dropdown -->

                <!-- Card Body -->
                <p class="text-uppercase text-primary">Item Ordered List</p>

                <table
                  class="table table-bordered"
                  id="dataTable"
                  width="100%"
                  cellspacing="0"
                >
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Product Name</th>
                      <th>unit price</th>
                      <th>ST</th>
                    </tr>
                  </thead>

                  <tbody>
                    <% newOrderProducts.forEach(function(data) {%>
                    <tr>
                      <td><%= data['id'] %></td>
                      <td><%= data['name'] %></td>
                      <td><%= data['price_per_item'] %></td>
                      <td><%= data['subTotal'] %></td>

                      <!-- Display the expiry date directly -->

                      <% }) %>
                    </tr>
                  </tbody>
                </table>

                <div class="row">

                  <div class="col-6 text-primary">Applied Discount:</div>
                <div class="col-6 text-warning">0 %</div>
                <div class="col-6 text-primary">Shipping Fee:</div>
                <div class="col-6 text-warning"> <%= newOrder[0].shipping_fee%></div>
                <hr>
                <div class="col-6 text-primary">Total To Be Paid:</div>
                <div class="col-6 text-warning"><%= newOrder[0].total_amount %> </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-6">
              <div class="mb-4">
                <p class="text-uppercase text-primary">Reference Info</p>

                <div class="row">
                  <div class="col-6">Sale Reference Id:</div>
                  <div class="col-6"><%= newOrder[0].sale_id %></div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- <div class="btn btn-warning mb-4" style="width: 100%;">cancel Order</div> -->
      </div>

      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />
    <br />

    <%- include ('../partials/footer') %>
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

<!-- Logout Modal-->
<%- include ('../partials/logout') %>
