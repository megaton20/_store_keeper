
    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Content Wrapper -->
        <div id="content-wrapper">

            <!-- Main Content -->
            <div id="content ">

                 <!-- Topbar -->
                 <%- include ('../partials/topbarUser') %>
                 <!-- End of Topbar -->

                <!-- Begin Page Content -->
                <div class="container-fluid">


                        <%- include ('../partials/messages') %>

                        <div class="container">
                            <div class="row mt-4">
                                <div class="col-6 ">
                                    <div class=" mb-4">
                                        <!-- Card Header - Dropdown -->
                             
                                        <!-- Card Body -->

                                            <p class="text-uppercase text-primary">Order Details</p>

                                                    <div class="row">

                                                   <div class="col-6">Total Amount:- </div>  <div class="col-6"> <%= newOrder[0].total_amount %></div>
                                                   <div class="col-6"> Payment Type:-</div>  <div class="col-6"><%= newOrder[0].payment_type %></div>
                                                   <div class="col-6">Delivery Type:-</div>  <div class="col-6"><%= newOrder[0].Delivery %></div>
                                                   <div class="col-6">Order Status:-</div>  <div class="col-6"><%= newOrder[0].status %></div>
                                                   <div class="col-6">Address:-</div>  <div class="col-6"><%= newOrder[0].state %> -</div>
                                                   <div class="col-6">Land Mark:-</div>  <div class="col-6"><%= newOrder[0].land_mark %> -</div>

                                                    </div>


                                    </div>
                                </div>
            
                                <div class="col-6">
                                    <div class=" mb-4">
                                        <!-- Card Header - Dropdown -->
                             
                                        <!-- Card Body -->
                                            <p class="text-uppercase text-primary">Item Ordered List</p>

                                            <table
                                            class="table table-bordered"
                                            id="dataTable"
                                            width="100%"
                                            cellspacing="0"
                                          >
                                            <thead>
                                              <tr>
                                                <th>ID</th>
                                                <th>Product Name</th>
                                                <th>unit price</th>
                                              </tr>
                                            </thead>
                            
                                            <tbody>
                                                <% newOrderProducts.forEach(function(data) {%>
                                                <tr>
                                                  <td><%= data['id'] %></td>
                                                  <td> <%= data['name'] %></td>
                                                  <td><%= data['price_per_item'] %></td>


                                                  <!-- Display the expiry date directly -->

                                                  <% }) %>
                            
                            
                                          
                                            </tbody>
                                          </table>
                                          
                                    </div>
                                </div>
                                 

                            </div>


                                <div class="row">
                                    <div class="col-6">
                                        <div class=" mb-4">
                                            <p class="text-uppercase text-primary">Reference Info</p>

                                            <div class="row">
                                            <div class="col-6">Sale Reference Id: </div>  <div class="col-6"> <%= newOrder[0].sale_id %></div>


                                            </div>
                                        </div>
                                    </div>
                                </div>

                        </div>
                               
                                
                                        
                                        
