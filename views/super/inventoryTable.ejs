<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include ('../partials/superSidebar') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include ('../partials/topbar') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Inventory</h1>
        <p class="mb-4">
          This table shows all registered Customers in all branches
        </p>

        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <%- include ('../partials/messages') %> <% if(allInventory.length <=
          0){ %>
          <div class="card-body">
            <h1>No Products Record Found !</h1>
          </div>
          <% } else{ %>

          <div class="card-body">
            <div class="table-responsive">
              <table
                class="table table-bordered"
                id="dataTable"
                width="100%"
                cellspacing="0"
              >
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Brand Name</th>
                    <th>Purchse Price</th>
                    <th>Supplier</th>
                    <th>Reciever</th>
                    <th>Payment method</th>
                    <th>Cost of delivery</th>
                    <th>Status</th>
                    <th>Activated ?</th>
                    <th>Days Left</th>
                    <th>Actions</th>
                  </tr>
                </thead>

                <tbody>
                  <% allInventory.forEach(function(data) { %>
                    <tr>
                      <td><%= data['id'] %></td>
                      <td><%= data['Product_name'] %></td>
                      <td><%= data['Brand_name'] %></td>
                      <td>$ <%= data['Purchase_price'] %></td>
                      <td><%= data['Supplier_name'] %></td>
                      <td><%= data['Reciever_name'] %></td>
                      <td><%= data['Payment_method'] %></td>
                      <td>$ <%= data['Cost_of_delivery'] %></td>
                      <td><%= data['status'] %></td>
                      <td><%= data['status'] %></td>
                      <!-- Display the expiry date directly -->
                      <td>
                        <% if (data.watchData) { %>
                          
                          <!-- switch colors -->
                          <% if (  data.watchData.days_left  >= 10) { %>

                            <div class="text-success btn btn-success shadow card">
                              <%= data.watchData.days_left %> days
                            </div>
                            <% } else { %>

                          <div class="text-danger btn-danger shadow card">
                            <%= data.watchData.days_left %> days
                          </div>

                          <% } %>
                              <!-- swtich ends -->

                        <% } else { %>
                          N/A
                        <% } %>
                      </td>
                  
                  </td>  <!-- Display watch data -->

                    <!-- check if button needed -->
                    <% if( data['activate'] == "yes" ){ %>

                    <td style="display: flex; margin-right: 2px">
                      <a
                        class="btn btn-success"
                        href="/super/inventory/<%= data['id'] %>"
                      >
                        View</a
                      >
                      <a
                        class="btn btn-secondary"
                        href="/super/edit-Inventory/<%= data['id'] %>"
                      >
                        edit</a
                      >
                      <form
                        action="/super/delete-inventory/<%= data['id'] %>"
                        method="POST"
                        style="display: inline"
                      >
                        <input type="hidden" name="_method" value="DELETE" />
                        <button class="btn btn-danger">Delete</button>
                      </form>
                    </td>

                    <% } else{ %>

                    <!-- check if price is null -->
                    <% if( data['status'] == "unverified" ){ %>
                    <td>
                      <form
                        action="/super/product-status/<%= data['status'] %>/<%= data['id'] %>"
                        method="POST"
                      >
                        <input type="hidden" name="_method" value="PUT" />
                        <button class="btn btn-primary">Switch Status</button>
                      </form>
                    </td>
                    <% } else{ %>

                    <td>
                
                      <button
                        aria-expanded="true"
                        aria-controls="collapseTwo"
                        class="btn btn-primary click-to-add-price"
                        data-toggle="modal"
                        data-value="<%= data['id'] %>"
                        data-target="#addPrice"
                        >Add to Shelf</button
                      >
                    </td>
                    <% } %> %>

                    <!-- end -->
                    <% } %> %>
                  </tr>

                  <% }) %>
                </tbody>
              </table>
            </div>
          </div>
          <% } %>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include ('../partials/footer') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

