<!-- Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%- include ('./partials/sidebar') %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">
      <!-- Topbar -->
      <%- include ('./partials/topbar') %>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <!-- Page Heading -->

        <%- include ('./partials/messages') %>
        <!-- DataTales Example -->
        <div class="row">
          

          <div class="col-8">
            <div class="card shadow mb-4">
              <div class="card-body">
                <div class="form mt-4 mb-4">
                  <% if(salesData.length <= 0){ %>
                    <div class="card-body">
                        <h1>No Category Record Found !</h1>  
                    </div> 
                    <% } else{ %>  

                        <div class="card-body">
                    
                            <div class="table-responsive">
                                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                    <thead>
                                        <tr>

                                          <th>Item Name</th>
                                          <th>Product id</th>
                                          <th>Store id</th>
                                          <th>Sales id</th>
                                          <th>price per Item</th>
                                          <th>
                                            action
                                          </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                  


                                        <% productsData.forEach(function(data) {%>
                                            <tr>
                                                <td><%= data['name'] %></td>
                                                <td><%= data['product_id'] %></td>
                                                <td><%= data['store_id'] %> </td>
                                                <td><%= data['sale_id'] %> </td>
                                                <td><%= data['price_per_item'] %> </td>
                                                <td>

                                                <form action="/admin/delete-category/<%= data['CategoryID'] %>" method="POST" style="display: inline;">
                                                    <!-- <input type="hidden" name="_method" value="DELETE" /> -->
                                                    <button  class="btn btn-danger"><i class="fas fa-fw fa-trash"></i></button>
                                                </form>
                                                </td>

                                                
                                           </tr> 
                                           
                                               <% }) %>
                                 
                                   
                                    

                                        </tbody>
                                </table>
                            </div>
                        </div> 
                        <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- /.container-fluid -->
    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <%- include ('./partials/footer') %>
    <!-- End of Footer -->
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<!-- Scroll to Top Button-->
<a class="scroll-to-top rounded" href="#page-top">
  <i class="fas fa-angle-up"></i>
</a>

